{
  "name": "selfhost-helper",
  "version": "0.4.13",
  "description": "Node.js Project Manager",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "cross-env NODE_ENV=development vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build && electron-builder",
    "build:dev": "vite build && cross-env NODE_ENV=development electron-builder --config.extraMetadata.appId=com.selfhosthelper.dev --config.directories.output=release-dev --config.productName=\"SelfHost Helper Dev\"",
    "build:prod": "vite build && cross-env NODE_ENV=production electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint ."
  },
  "build": {
    "appId": "com.selfhosthelper.app",
    "productName": "SelfHost Helper",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "database/**/*",
      "package.json",
      "!**/*.map",
      "!**/*.md",
      "!**/node_modules/*/{test,tests,example,examples}",
      "!**/node_modules/.bin",
      "!**/node_modules/**/README.md"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico"
    },
    "extraResources": [
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "resources/icon.png"
    }
  },
  "author": {
    "name": "@DevRoots/AboMeezO",
    "email": "abomeezo2@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-react": "latest",
    "autoprefixer": "latest",
    "concurrently": "latest",
    "cross-env": "latest",
    "electron": "latest",
    "electron-builder": "latest",
    "eslint": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-react-refresh": "latest",
    "postcss": "latest",
    "tailwindcss": "latest",
    "vite": "latest",
    "wait-on": "latest"
  },
  "dependencies": {
    "@monaco-editor/react": "latest",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "auto-launch": "latest",
    "chokidar": "latest",
    "class-variance-authority": "latest",
    "clsx": "latest",
    "framer-motion": "latest",
    "jotai": "^2.16.1",
    "lucide-react": "latest",
    "pg-hstore": "^2.3.4",
    "pidusage": "^4.0.1",
    "react": "latest",
    "react-dom": "latest",
    "react-router-dom": "^7.11.0",
    "react-toastify": "^11.0.5",
    "sequelize": "latest",
    "sqlite3": "latest",
    "tailwind-merge": "latest"
  }
}
